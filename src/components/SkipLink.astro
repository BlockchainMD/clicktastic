---
interface Props {
  href?: string;
  text?: string;
}

const { href = '#main-content', text = 'Skip to main content' } = Astro.props;
---

<a href={href} class="skip-link">
  {text}
</a>

<style>
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: var(--accent);
    color: white;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    z-index: 9999;
    transition: top 0.3s ease;
    font-size: 14px;
    line-height: 1.2;
  }

  .skip-link:focus {
    top: 6px;
    outline: 3px solid white;
    outline-offset: 2px;
  }

  .skip-link:hover {
    background: var(--accent-dark);
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .skip-link {
      background: #000;
      color: #fff;
      border: 2px solid #fff;
    }
    
    .skip-link:focus {
      outline: 3px solid #ff0;
    }
  }
</style>