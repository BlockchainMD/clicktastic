---
interface Props {
  tag: string;
  isActive?: boolean;
  onClick?: string;
}

const { tag, isActive = false, onClick } = Astro.props;
---

<span 
  class:list={["tag", { active: isActive }]}
  data-tag={tag}
  onclick={onClick}
>
  #{tag}
</span>

<style>
  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(var(--gray-light), 0.3);
    color: var(--text-color-light);
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid transparent;
    margin: 0.25rem;
  }

  .tag:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-2px);
  }

  .tag.active {
    background: var(--accent);
    color: white;
    border-color: var(--accent-dark);
  }

  .tag:active {
    transform: translateY(0);
  }
</style>