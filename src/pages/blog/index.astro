---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogSearch from '../../components/BlogSearch.astro';
import Tag from '../../components/Tag.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Extract all unique tags
const allTags = [...new Set(posts.flatMap(post => post.data.tags || []))].sort();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2rem);
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			h1 {
				text-align: center;
				color: var(--text-color);
				margin-bottom: 0.5rem;
			}
			
			section > p {
				text-align: center;
				color: var(--text-color-light);
				margin-bottom: 2rem;
			}
			
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			
			ul li {
				width: calc(50% - 1rem);
				background: var(--card-bg);
				border-radius: 12px;
				overflow: hidden;
				box-shadow: var(--box-shadow);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			
			ul li:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 25px rgba(var(--gray), 0.15);
			}
			
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}
			
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			
			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 0;
			}
			
			ul li:first-child img {
				height: 300px;
			}
			
			ul li a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			
			.post-content {
				padding: 1.5rem;
			}
			
			.title {
				margin: 0 0 0.5rem 0;
				color: var(--text-color);
				line-height: 1.2;
				font-size: 1.25rem;
			}
			
			.date {
				margin: 0 0 0.75rem 0;
				color: var(--text-color-light);
				font-size: 0.875rem;
			}
			
			.description {
				margin: 0 0 1rem 0;
				color: var(--text-color-light);
				font-size: 0.9rem;
				line-height: 1.5;
			}
			
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.25rem;
				margin-top: 1rem;
			}
			
			ul li a:hover .title {
				color: var(--accent);
			}
			
			@media (max-width: 720px) {
				main {
					padding: 1rem;
				}
				
				ul {
					gap: 1rem;
				}
				
				ul li {
					width: 100%;
				}
				
				ul li:first-child {
					margin-bottom: 0;
				}
				
				ul li:first-child .title {
					font-size: 1.563rem;
				}
				
				.post-content {
					padding: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Blog</h1>
				<p>Insights and trends in ethical advertising</p>
				
				<BlogSearch allTags={allTags} />
				
				<ul>
					{
						posts.map((post) => (
							<li class="blog-post" data-tags={JSON.stringify(post.data.tags || [])}>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<div class="post-content">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<p class="description">{post.data.description}</p>
										{post.data.tags && (
											<div class="tags">
												{post.data.tags.map((tag: string) => (
													<Tag tag={tag} />
												))}
											</div>
										)}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
