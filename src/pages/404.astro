---
import PageLayout from '../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

// Get recent blog posts for suggestions
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3);

const popularPages = [
  { title: 'Our Services', href: '/services', description: 'Discover our ethical advertising solutions' },
  { title: 'Blog', href: '/blog', description: 'Latest insights and trends' },
  { title: 'About Us', href: '/about', description: 'Learn about our mission and values' },
  { title: 'Contact', href: '/contact', description: 'Get in touch with our team' },
];
---

<PageLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist, but we're here to help you find what you need."
  heroImage="/blog-placeholder-about.jpg"
>
  <section class="error-section">
    <div class="error-content">
      <div class="error-code">404</div>
      <h1>Oops! Page Not Found</h1>
      <p class="error-message">
        The page you're looking for seems to have wandered off. Don't worry – even the best campaigns sometimes take unexpected turns!
      </p>
      
      <div class="search-section">
        <h2>Search Our Site</h2>
        <div class="search-box">
          <input 
            type="text" 
            id="site-search" 
            placeholder="Search for content, services, or insights..."
            class="search-input"
          />
          <button onclick="performSearch()" class="search-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <section class="suggestions-section">
    <h2>Popular Pages</h2>
    <div class="suggestions-grid">
      {popularPages.map((page) => (
        <a href={page.href} class="suggestion-card">
          <h3>{page.title}</h3>
          <p>{page.description}</p>
          <span class="suggestion-arrow">→</span>
        </a>
      ))}
    </div>
  </section>

  <section class="recent-posts-section">
    <h2>Recent Blog Posts</h2>
    <div class="posts-grid">
      {posts.map((post) => (
        <a href={`/blog/${post.id}/`} class="post-card">
          <img src={post.data.heroImage} alt="" />
          <div class="post-content">
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="help-section">
    <h2>Still Can't Find What You're Looking For?</h2>
    <p>Our team is here to help you navigate to the right place.</p>
    <div class="help-actions">
      <a href="/contact" class="help-button primary">Contact Us</a>
      <a href="/" class="help-button secondary">Back to Home</a>
    </div>
  </section>
</PageLayout>

<style>
  /* Error Section */
  .error-section {
    text-align: center;
    padding: 2rem 0 4rem;
    background: linear-gradient(135deg, rgba(255, 0, 110, 0.05) 0%, rgba(255, 0, 110, 0.02) 100%);
    border-radius: 12px;
    margin-bottom: 4rem;
  }

  .error-content {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 900;
    color: var(--accent);
    margin: 0;
    line-height: 1;
    text-shadow: 0 4px 8px rgba(255, 0, 110, 0.3);
  }

  .error-section h1 {
    font-size: 2.5rem;
    color: var(--text-color);
    margin: 1rem 0;
  }

  .error-message {
    font-size: 1.2rem;
    color: var(--text-color-light);
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  /* Search Section */
  .search-section {
    margin-bottom: 2rem;
  }

  .search-section h2 {
    font-size: 1.3rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .search-box {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--box-shadow);
  }

  .search-input {
    flex: 1;
    padding: 1rem;
    border: 2px solid var(--border-color);
    border-right: none;
    font-size: 1rem;
    background: var(--bg-color);
    color: var(--text-color);
    border-radius: 8px 0 0 8px;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .search-button {
    padding: 1rem;
    background: var(--accent);
    color: white;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    border-radius: 0 8px 8px 0;
  }

  .search-button:hover {
    background: var(--accent-dark);
  }

  /* Suggestions Section */
  .suggestions-section {
    margin-bottom: 4rem;
  }

  .suggestions-section h2 {
    text-align: center;
    color: var(--text-color);
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .suggestions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .suggestion-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .suggestion-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(var(--gray), 0.15);
  }

  .suggestion-card h3 {
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
    font-size: 1.2rem;
  }

  .suggestion-card p {
    margin: 0;
    color: var(--text-color-light);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .suggestion-arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    color: var(--accent);
    font-size: 1.5rem;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .suggestion-card:hover .suggestion-arrow {
    transform: translateX(4px);
  }

  /* Recent Posts Section */
  .recent-posts-section {
    margin-bottom: 4rem;
  }

  .recent-posts-section h2 {
    text-align: center;
    color: var(--text-color);
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--box-shadow);
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(var(--gray), 0.15);
  }

  .post-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-content h3 {
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
    font-size: 1.1rem;
    line-height: 1.3;
  }

  .post-content p {
    margin: 0;
    color: var(--text-color-light);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  /* Help Section */
  .help-section {
    text-align: center;
    background: var(--code-bg);
    padding: 3rem 2rem;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .help-section h2 {
    color: var(--text-color);
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .help-section p {
    color: var(--text-color-light);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .help-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .help-button {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .help-button.primary {
    background: var(--accent);
    color: white;
  }

  .help-button.primary:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
  }

  .help-button.secondary {
    background: transparent;
    color: var(--accent);
    border: 2px solid var(--accent);
  }

  .help-button.secondary:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-code {
      font-size: 6rem;
    }

    .error-section h1 {
      font-size: 2rem;
    }

    .error-message {
      font-size: 1.1rem;
    }

    .search-box {
      flex-direction: column;
      border-radius: 8px;
    }

    .search-input {
      border-right: 2px solid var(--border-color);
      border-radius: 8px 8px 0 0;
    }

    .search-button {
      border-radius: 0 0 8px 8px;
    }

    .suggestions-grid {
      grid-template-columns: 1fr;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .help-actions {
      flex-direction: column;
      align-items: center;
    }

    .help-button {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

<script>
  function performSearch() {
    const searchInput = document.getElementById('site-search') as HTMLInputElement;
    const query = searchInput?.value.trim();
    
    if (query) {
      // Redirect to blog with search query
      window.location.href = `/blog?search=${encodeURIComponent(query)}`;
    }
  }

  // Allow Enter key to trigger search
  document.getElementById('site-search')?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      performSearch();
    }
  });
</script>